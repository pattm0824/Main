<table class="table table-striped">
    <tr>
        <th>Date of Birth</th>
        <td>@Model.DOB.ToShortDateString()</td>
    </tr>
</table>

<form asp-controller="profile" asp-action="updateDOB" method="post">
    <table class="table table-striped">
        <tr>
            <td> <label asp-for="DOB" class="text-warning">New Date Of Birth</label></td>
            <td>
                <input asp-for="DOB" type="date" class="input-sm text-warning" />
            </td>

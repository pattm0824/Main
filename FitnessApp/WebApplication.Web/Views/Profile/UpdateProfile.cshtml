@using WebApplication.Web.Models.UpdateProfile
@model UpdateProfileVM
@{
    ViewData["Title"] = "UpdateProfile";
}

<h2>@Model.Name's Profile</h2>

<table class="table table-striped">
    <tr>
        <th>Username</th>
        <td>@Model.Username</td>
    </tr>
</table>

<table class="table table-striped">
    <tr>
        <th>Password</th>
    </tr>
</table>

<form asp-controller="profile" asp-action="updatePassword" method="post">
    <table class="table table-striped">
        <tr>
            <td><label asp-for="CurrentPassword" class="text-warning">Current Password</label></td>
            <td>
                <input type="password" asp-for="CurrentPassword" class="input-sm text-warning" />
                <span asp-validation-for="CurrentPassword" class="alert-warning"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Password" class="text-warning">New Password</label></td>
            <td>
                <input type="password" asp-for="Password" class="input-sm text-warning" />
                <span asp-validation-for="Password" class="alert-warning"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="ConfirmPassword" class="text-warning">Confirm New Password</label></td>
            <td>
                <input type="password" asp-for="ConfirmPassword" class="input-sm text-warning" />
                <span asp-validation-for="ConfirmPassword" class="alert-warning"></span>
            </td>
            <td> <input type="submit" value="✔" class="btn btn-warning" /></td>
        </tr>
        <tr>
            <strong class="alert-danger text-center">@TempData["message2"]</strong>
            <strong class="alert-success text-center">@TempData["message"]</strong>
        </tr>
    </table>
</form>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
</table>
<form asp-controller="profile" asp-action="updateName" method="post">
    <table class="table table-striped">
        <tr>
            <td><label asp-for="Name" class="text-warning">New Name</label></td>
            <td>
                <input asp-for="Name" class="input-sm text-warning" />
            </td>
            <td> <input type="submit" value="✔" class="btn btn-warning" /></td>
        </tr>
    </table>
</form>

<table class="table table-striped">
    <tr>
        <th>State</th>
        <td>@Model.State</td>
    </tr>
</table>

